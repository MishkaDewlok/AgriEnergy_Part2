@model IEnumerable<Product> // Assuming 'Product' is your model

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <style>
        body {
            background-color: #f0fff0; /* Light green background */
            font-family: 'Georgia', serif;
            padding: 20px;
        }

        .navbar {
            background-color: #ffffff; /* White background for navbar */
            border-bottom: 2px solid #4CAF50; /* Green border */
            padding: 10px;
            margin-bottom: 20px;
        }

            .navbar a {
                color: #4CAF50;
                text-decoration: none;
                margin-right: 15px;
            }

                .navbar a:hover {
                    text-decoration: underline;
                }

        .container-fluid {
            display: flex;
            justify-content: space-between;
        }

        .navbar-toggler {
            display: none; /* Hide the toggler button for simplicity */
        }

        h1 {
            color: #4CAF50;
        }

        .form-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .input-group {
            margin-bottom: 15px;
        }

        .input-group-text {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px;
        }

        .form-control {
            border: 1px solid #4CAF50;
            padding: 10px;
        }

        .btn-primary {
            background-color: #4CAF50;
            border: none;
            padding: 10px 20px;
            color: white;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #45a049;
            }

        .table-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .table th, .table td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }

            .table th {
                background-color: #4CAF50;
                color: white;
            }

            .table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

        .alert {
            background-color: #ffcc00;
            padding: 10px;
            border-radius: 5px;
            color: #555;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container-fluid">
                <div>
                    <a href="@Url.Action("Index", "Home")">AgriEnergy</a>
                </div>
                <div>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    <a href="@Url.Action("Index", "Farmers")">Farmers</a>
                    <a href="@Url.Action("Index", "Products")">Products</a>
                    <a href="@Url.Action("Filter", "Products")">Search Products</a>
                    <a href="@Url.Action("EmployeeSignUp", "Employees")">Employee SignUp</a>
                    <a href="@Url.Action("Privacy", "Home")">Privacy</a>
                </div>
            </div>
        </nav>
    </header>

    <h1>Product List</h1>

    <div class="form-container">
        <form asp-action="Filter" asp-controller="Products" method="get">
            <div class="input-group">
                <span class="input-group-text">Farmer ID:</span>
                <input type="number" id="farmerId" name="farmerId" class="form-control" placeholder="Enter Farmer ID">
            </div>
            <div class="input-group">
                <span class="input-group-text">Category:</span>
                <input type="text" id="category" name="category" class="form-control" placeholder="Enter Category">
            </div>
            <div class="input-group">
                <span class="input-group-text">Start Date:</span>
                <input type="date" id="startDate" name="startDate" class="form-control">
            </div>
            <div class="input-group">
                <span class="input-group-text">End Date:</span>
                <input type="date" id="endDate" name="endDate" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>

    <div class="table-container">
        @if (Model.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Farmer</th>
                        <th>Category</th>
                        <th>Production Date</th>
                        <th>Price</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Farmer</td>
                            <td>@product.ProductCategory</td>
                            <td>@product.ProductionDate.ToString("yyyy-MM-dd")</td>
                            <td>@product.ProductPrice.ToString("C2")</td>
                            <td>@product.ProductQuantity</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert" role="alert">
                No products found for the given criteria.
            </div>
        }
    </div>
</body>
</html>
