@model IEnumerable<Product> // Assuming 'Product' is your model

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <style>
        body {
            background-color: #f0fff0; /* Light green background */
            font-family: 'Georgia', serif;
            padding: 20px;
        }

        .navbar {
            background-color: #ffffff; /* White background for navbar */
            border-bottom: 2px solid #4CAF50; /* Green border */
            padding: 10px;
            margin-bottom: 20px;
        }

            .navbar a {
                color: #4CAF50;
                text-decoration: none;
                margin-right: 15px;
            }

                .navbar a:hover {
                    text-decoration: underline;
                }

        .container-fluid {
            display: flex;
            justify-content: space-between;
        }

        .navbar-toggler {
            display: none; /* Hide the toggler button for simplicity */
        }

        h1 {
            color: #4CAF50;
        }

        .table-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table th, .table td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }

            .table th {
                background-color: #4CAF50;
                color: white;
            }

            .table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

        .alert {
            background-color: #ffcc00;
            padding: 10px;
            border-radius: 5px;
            color: #555;
        }

        .add-product {
            display: inline-block;
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border-radius: 5px;
            text-decoration: none;
            margin-bottom: 15px;
        }

            .add-product:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container-fluid">
                <div>
                    <a href="@Url.Action("Index", "Home")">AgriEnergy</a>
                </div>
                <div>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    <a href="@Url.Action("FarmerProducts", "Products")">Products</a>
                    <a href="@Url.Action("Privacy", "Home")">Privacy</a>
                </div>
            </div>
        </nav>
    </header>

    <h1>Product List</h1>

    <a href="@Url.Action("Create")" class="add-product">Add Product</a>

    <div class="table-container">
        @if (Model.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Farmer</th>
                        <th>Category</th>
                        <th>Production Date</th>
                        <th>Price</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Farmer</td>
                            <td>@product.ProductCategory</td>
                            <td>@product.ProductionDate.ToString("yyyy-MM-dd")</td>
                            <td>@product.ProductPrice.ToString("C2")</td>
                            <td>@product.ProductQuantity</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert" role="alert">
                No products found
            </div>
        }
    </div>
</body>
</html>
