@model AgriEnergy.Models.Farmer

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - AgriEnergy</title>
    <style>
        body {
            background-color: #f0fff0; /* Light green background */
            font-family: 'Georgia', serif;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background-color: #ffffff; /* White background for the form */
            border-radius: 10px;
            box-shadow: 0px 0px 10px 0px #aaa;
        }

        h1, h4 {
            text-align: center;
            color: #4CAF50; /* Green tone */
        }

        .btn-primary {
            background-color: #4CAF50; /* Green tone for button */
            border: none;
        }

            .btn-primary:hover {
                background-color: #45a049; /* Darker green on hover */
            }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            font-weight: bold;
        }

        .text-danger {
            color: red;
        }

        .back-to-list {
            display: block;
            margin-top: 20px;
            text-align: center;
        }

            .back-to-list a {
                color: #4CAF50;
                text-decoration: none;
            }

                .back-to-list a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <div class="container">
        <h1>Create</h1>
        <h4>Farmer</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FarmerUserName" class="control-label"></label>
                <input asp-for="FarmerUserName" class="form-control" />
                <span asp-validation-for="FarmerUserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FarmerPassword" class="control-label"></label>
                <input asp-for="FarmerPassword" class="form-control" />
                <span asp-validation-for="FarmerPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div class="back-to-list">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>
