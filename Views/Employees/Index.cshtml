@model IEnumerable<AgriEnergy.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f0fff0; /* Light green background */
            font-family: 'Georgia', serif;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #ffffff; /* White background for the content */
            border-radius: 10px;
            box-shadow: 0px 0px 10px 0px #aaa;
        }

        h1 {
            text-align: center;
            color: #4CAF50; /* Green tone */
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            margin: 10px 0;
            font-size: 16px;
            color: #fff;
            background-color: #4CAF50; /* Green tone */
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            text-align: center;
        }

            .btn:hover {
                background-color: #45a049; /* Darker green on hover */
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .btn-group {
            display: flex;
            gap: 10px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <p>
            <a class="btn" href="@Url.Action("Create")">Create New</a>
        </p>
        <table>
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeUserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeePassword)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeUserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeePassword)
                        </td>
                        <td>
                            <div class="btn-group">
                                <a class="btn" href="@Url.Action("Edit", new { id = item.EmployeeId })">Edit</a>
                                <a class="btn" href="@Url.Action("Details", new { id = item.EmployeeId })">Details</a>
                                <a class="btn" href="@Url.Action("Delete", new { id = item.EmployeeId })">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
